/** index.wxss **/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  padding: 10px; /* Add padding to the container for spacing */
}

.title {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60px; /* Adjust the height as needed */
}

.title-text {
  font-family: 'Pacifico', cursive; /* Art font for the title */
  font-size: 24px;
  color: #333;
}

.button-group {
  display: flex;
  flex-direction: column;
  align-items: center; /* Center the buttons */
  margin-bottom: 20px; /* Add space below the buttons */
}

.compact-button {
  background-color: #add8e6; /* Light blue button color */
  color: white;
  margin: 5px 0; /* Reduced margin for compactness */
  padding: 10px;
  border-radius: 5px;
  border: none;
}

.recent-records {
  margin-top: -20px; /* Add space above the recent records */
}

.record-item {
  margin-bottom: 10px;
  padding: 5px;
  border-bottom: 1px solid #e5e5e5; /* Add a subtle border for separation */
}